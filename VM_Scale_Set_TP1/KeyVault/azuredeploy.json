{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vaults_TP1_Keyvault_Principale_name": {
      "defaultValue": "TP1-Keyvault-Principale",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2024-04-01-preview",
      "name": "[parameters('vaults_TP1_Keyvault_Principale_name')]",
      "location": "canadaeast",
      "properties": {
        "sku": {
          "family": "A",
          "name": "Standard"
        },
        "tenantId": "6c2fa649-8328-47a1-a1a3-3d1d4677c16f",
        "accessPolicies": [],
        "enabledForDeployment": true,
        "enabledForDiskEncryption": false,
        "enabledForTemplateDeployment": true,
        "enableSoftDelete": true,
        "softDeleteRetentionInDays": 90,
        "enableRbacAuthorization": true,
        "vaultUri": "https://tp1-keyvault-principale.vault.azure.net/",
        "provisioningState": "Succeeded",
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2024-04-01-preview",
      "name": "[concat(parameters('vaults_TP1_Keyvault_Principale_name'), '/VMPassword')]",
      "location": "canadaeast",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('vaults_TP1_Keyvault_Principale_name'))]"
      ],
      "properties": {
        "attributes": {
          "enabled": true
        }
      }
    }
  ]
}